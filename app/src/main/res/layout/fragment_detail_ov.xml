<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckg">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/addressimage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="@string/fr_detail_acc_balance"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="7dp"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:text="0.0000"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="26sp" />

                            <TextView
                                android:id="@+id/currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:text="ETH"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/ethaddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"
                android:text="@string/ether_and_token"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#7aa1a1a1" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                tools:showIn="@layout/activity_main" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/fabmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                fab:menu_animationDelayPerItem="1"
                fab:menu_colorNormal="@color/colorPrimary"
                fab:menu_colorRipple="@color/colorAccent"
                fab:menu_shadowColor="#444">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/set_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_edit"
                    app:fab_colorNormal="@color/colorPrimary"
                    app:fab_colorRipple="@color/colorAccent"
                    app:fab_label="Rename wallet"
                    fab:menu_colorNormal="@color/colorPrimary"
                    fab:menu_colorRipple="@color/colorAccent" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/send_ether_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cmv_arrow"
                    app:fab_colorNormal="@color/colorPrimary"
                    app:fab_colorRipple="@color/colorAccent"
                    fab:fab_label="@string/fab_sendether_from"
                    fab:menu_colorNormal="@color/colorPrimary"
                    fab:menu_colorRipple="@color/colorAccent" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/send_ether"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_transform_white_24dp"
                    app:fab_colorNormal="@color/colorPrimary"
                    app:fab_colorRipple="@color/colorAccent"
                    fab:fab_label="@string/fab_sendether_to"
                    fab:menu_colorNormal="@color/colorPrimary"
                    fab:menu_colorRipple="@color/colorAccent" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/add_as_watch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back_white"
                    app:fab_colorNormal="@color/colorPrimary"
                    app:fab_colorRipple="@color/colorAccent"
                    fab:menu_colorNormal="@color/colorPrimary"
                    fab:menu_colorRipple="@color/colorAccent" />


            </com.github.clans.fab.FloatingActionMenu>
        </RelativeLayout>
    </FrameLayout>
</android.support.v4.widget.SwipeRefreshLayout>