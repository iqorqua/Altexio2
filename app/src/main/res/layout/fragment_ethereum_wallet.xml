<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.altex.alttexio.fragments.EthereumWallet">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/wallet_import_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                fancy:mfb_borderColor="#FFFFFF"
                fancy:mfb_borderWidth="1dp"
                fancy:mfb_defaultColor="@android:color/holo_blue_light"
                fancy:mfb_focusColor="@android:color/holo_blue_light"
                fancy:mfb_iconFont="fontawesome.ttf"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="30dp"
                fancy:mfb_text="Import Wallet"
                fancy:mfb_textColor="#FFFFFF" />

            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/wallet_add_new_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                fancy:mfb_borderColor="#FFFFFF"
                fancy:mfb_borderWidth="1dp"
                fancy:mfb_defaultColor="@android:color/holo_blue_light"
                fancy:mfb_focusColor="@android:color/holo_blue_light"
                fancy:mfb_iconFont="fontawesome.ttf"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="30dp"
                fancy:mfb_text="Add New"
                fancy:mfb_textColor="#FFFFFF" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/wallet_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>
